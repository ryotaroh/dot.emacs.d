(require 'cl)

;; install package
(defvar installing-package-list
  '(
    ;; edit-mode
    php-mode
    js2-mode

    ;; others
    auto-complete
    color-theme
   ))

(let ((not-installed (loop for x in installing-package-list
                            when (not (package-installed-p x))
                            collect x)))
  (when not-installed
    (package-refresh-contents)
    (dolist (pkg not-installed)
        (package-install pkg))))

